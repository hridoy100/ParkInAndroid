<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="5dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Space #"
            android:textSize="17sp"
            android:fontFamily="@font/roboto_bold"
            android:gravity="center"
            android:padding="10dp"
            android:id="@+id/spaceNo"
            android:textColor="@color/quantum_vanillablue400"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/ms_material_grey_400"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Identification of the space:"
            android:fontFamily="@font/roboto_bold"
            android:textSize="17sp"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:textColor="@color/ms_black"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Write specifically about the space so that drivers can accurately identify the space you have rented"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/roboto"
            />

        <android.support.v7.widget.AppCompatEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/aboutSpace"
            android:background="@drawable/bg_rounded_edit_text"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textColor="@color/ms_black"
            android:hint="This space located on the west side of the garage. Marked as space number 1."
            android:gravity="top"
            android:fontFamily="@font/roboto"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_access_time_black_24dp"
                android:text="Start Time"
                android:gravity="center"
                android:background="@drawable/bg_rounded_edit_text"
                android:backgroundTint="@color/quantum_vanillagreenA400"
                android:padding="10dp"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:fontFamily="@font/roboto"
                android:id="@+id/start_time"
                android:layout_gravity="center"
                />
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@color/ms_material_grey_400"
                />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_access_time_black_24dp"
                android:text="End Time"
                android:gravity="center"
                android:background="@drawable/bg_rounded_edit_text"
                android:backgroundTint="#ff5454"
                android:padding="10dp"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:fontFamily="@font/roboto"
                android:id="@+id/end_time"
                android:layout_gravity="center"
                />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="CCTV IP address:"
            android:fontFamily="@font/roboto_bold"
            android:textSize="17sp"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:textColor="@color/ms_black"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" The IP Address provided with your cctv camera. You can leave it blank if there's no cctv facility for this space."
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/roboto"
            />

        <android.support.v7.widget.AppCompatEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cctv_ip_address"
            android:background="@drawable/bg_rounded_edit_text"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textColor="@color/ms_black"
            android:hint="10.0.0.1"
            android:gravity="top"
            android:fontFamily="@font/roboto"
            android:layout_marginBottom="5dp"
            />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="What is the largest vehicle your space can accommodate?"
                android:fontFamily="@font/roboto_bold"
                android:textSize="17sp"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:textColor="@android:color/black"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Select the largest vehicle possible that can fit through the entrance and into the space itself."
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/roboto"
                />
            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_rounded_edit_text"
                android:id="@+id/vehicleType"
                >
                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:text="Motor Bike"
                    android:id="@+id/bike"
                    android:drawableRight="@drawable/bike_small_32"
                    android:fontFamily="@font/roboto"
                    android:paddingRight="20dp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#71d2d2d2"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp"/>
                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:text="Small Car"
                    android:id="@+id/smallCar"
                    android:drawableRight="@drawable/small"
                    android:fontFamily="@font/roboto"
                    android:paddingRight="20dp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#71d2d2d2"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp"/>
                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:text="Medium Car"
                    android:id="@+id/mediumCar"
                    android:drawableRight="@drawable/medium_1"
                    android:fontFamily="@font/roboto"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#71d2d2d2"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp"/>
                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:text="4x4 or Large Car"
                    android:id="@+id/largeCar"
                    android:drawableRight="@drawable/pajero"
                    android:fontFamily="@font/roboto"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#71d2d2d2"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp"/>

                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:text="Mini Van"
                    android:id="@+id/miniVan"
                    android:drawableRight="@drawable/mini_truck"
                    android:fontFamily="@font/roboto"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#71d2d2d2"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp"/>
                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:text="Large Van or Minibus"
                    android:id="@+id/largeVan"
                    android:drawableRight="@drawable/mini_bus"
                    android:fontFamily="@font/roboto"/>

                <!--<View-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="1dp"-->
                    <!--android:background="#71d2d2d2"-->
                    <!--android:layout_marginTop="3dp"-->
                    <!--android:layout_marginBottom="3dp"/>-->
                <!--<RadioButton-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="35dp"-->
                    <!--android:text="Cycle"-->
                    <!--android:id="@+id/cycle"-->
                    <!--android:drawableRight="@drawable/cycle_small_32"-->
                    <!--android:fontFamily="@font/roboto"/>-->
            </RadioGroup>


            <View
                android:id="@+id/view4"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#71d2d2d2"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"/>
    </LinearLayout>
    </ScrollView>

</android.support.v7.widget.CardView>