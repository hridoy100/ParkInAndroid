<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item>
                <shape>
                    <stroke
                        android:width="1dp"
                        android:color="#000000" />

                    <corners android:radius="3dp" />

                    <solid android:color="@android:color/transparent"></solid>


                    <padding
